<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/chat_bar_color">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/ic_back_button" />


        <ImageView
            android:layout_marginLeft="42dp"
            android:id="@+id/image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backbutton"
            android:src="@color/black" />

        <LinearLayout
            android:layout_marginHorizontal="8dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/videoCallButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martha Craig"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:textColor="#8e8e93"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tap here for contact info"/>
        </LinearLayout>

        <ImageButton
            android:layout_toLeftOf="@+id/call_button"
            android:id="@+id/videoCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/ic_video_call" />

        <ImageButton

            android:layout_alignParentRight="true"
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="18dp"
            android:background="@drawable/ic_call" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottom"
        android:layout_below="@+id/layoutHeader"
        android:background="@drawable/chat_bg">

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@color/chat_bar_color">

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="13dp"
            android:background="@drawable/ic_add" />

        <EditText
            android:hint="Lütfen mesaj yazınız..."
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/addButton"
            android:layout_toLeftOf="@id/cameraButton"
            android:inputType="text"/>

        <ImageButton

            android:id="@+id/cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toLeftOf="@id/recordAudioButton"
            android:background="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/recordAudioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/ic_record_audio" />

    </RelativeLayout>

</RelativeLayout>